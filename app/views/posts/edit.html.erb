<%= form_for @post, url: user_post_path(@post.user_id, @post.id), method: :patch do |f| %>
    <%= f.hidden_field :group_id %>
    <%= f.hidden_field :user_id %>
    <%= f.label "Post Title" %> 
    <%= f.text_field :title %> 
    <%= f.label "Post Content" %> 
    <%= f.text_field :content %> 
    <%= f.submit "Edit Post" %>
<% end %>