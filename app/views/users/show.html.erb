
<h2> Your Subscribed Groups: </h2>
<% if @current_user.subscriptions.empty? %>
    You are not subscribed or invited to any groups!
<% end %>
<% @current_user.subscriptions.each do |sub| %>
    <% if sub.confirmed %>
        <div>
            <%= group_name(sub) %> <%= group_bio(sub) %>
            Users: <% group_users(sub).each do |user| %>
                <%= user.username %>
            <% end %>
        </div>            
    <% end %>
<% end %>
<h2>Group Invitations: </h2>
<% invitations(@current_user).each do |inv| %>
    <%= group_name inv %> <%= group_bio inv %>
    Users: <% group_users(inv).each do |user| %>
        <%= user.username %>
    <% end %>
    <br>
<% end %>

<%= button_to "Create Group", new_user_group_path(@current_user), method: :get %>
<%= @current_user.followers.count %> <%= link_to "Followers", user_followers_path(@current_user) %>
